<link href="~/css/add-document.css" rel="stylesheet" />

<div class="document-form-wrapper">
    <div class="form-card">
        <div class="form-header">
            <h2>Add Document</h2>
            <a href="#" class="btn-back">🔙 Back</a>
        </div>

        <form class="document-form">
            <div class="form-grid">
                <div class="form-group">
                    <label for="docName">Name <span class="required">*</span></label>
                    <input type="text" id="docName" class="form-input" placeholder="Enter document name" />
                </div>

                <div class="form-group">
                    <label for="isRequired">Is Required</label>
                    <select id="isRequired" class="form-select">
                        <option>No</option>
                        <option>Yes</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="status">Status</label>
                    <select id="status" class="form-select">
                        <option>Active</option>
                        <option>Inactive</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="hasExpiry">Has Expiry Date</label>
                    <select id="hasExpiry" class="form-select">
                        <option>No</option>
                        <option>Yes</option>
                    </select>
                </div>
            </div>

            <div class="form-footer">
                <button type="submit" class="btn-save">Save</button>
            </div>
        </form>
    </div>
</div>
