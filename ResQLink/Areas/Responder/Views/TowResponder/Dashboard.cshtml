
<link href="~/css/tow-emergency-dashboard.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Dashboard";
}

<div class="responder-dashboard">
    <div class="card tow-truck">
        <div class="icon">
            <img src="~/images/tow-truck.png" alt="Tow Truck Icon" />
        </div>
        <div class="text">
            <h2>Tow Truck</h2>
            <p>For minor breakdowns where a regular tow can help.</p>
        </div>
    </div>

    <div class="card flatbed-truck">
        <div class="icon">
            <img src="~/images/flatbed-truck.png" alt="Flatbed Truck Icon" />
        </div>
        <div class="text">
            <h2>Flatbed Truck</h2>
            <p>Safe transport for cars that require all-wheel lifting.</p>
        </div>
    </div>

    <div class="card standby-mechanic">
        <div class="icon">
            <img src="~/images/mechanic.png" alt="Standby Mechanic Icon" />
        </div>
        <div class="text">
            <h2>Standby Mechanic Nearby</h2>
            <p>Minor repairs like battery jump-start, tire change, or engine check.</p>
        </div>
    </div>
</div>
